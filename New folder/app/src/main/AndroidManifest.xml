<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kpmadan.otshealthproject">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ots_img_home"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ots_img_home"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <uses-permission android:name="android.permission.GET_ACCOUNTS" />
        <uses-permission android:name="android.permission.READ_PROFILE" />
        <uses-permission android:name="android.permission.READ_CONTACTS" />
        <uses-permission android:name="android.permission.INTERNET" />

        <activity
            android:name=".WelcomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".SignupOptionActivity" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".DoctorAppointment" />
        <activity
            android:name=".PhoneAuth"
            android:label="@string/title_activity_phone_auth" />
        <activity android:name=".TestAbout" />
        <activity android:name=".FirstUserData" />
        <activity android:name=".HospitalView"></activity>
    </application>

</manifest>